# Environment Variables Example
# Copy this file to .env.local and fill in your values
# All .env* files are excluded from source control for security

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Photo Library Chat
NEXT_PUBLIC_APP_VERSION=1.0.0

# n8n
N8N_CHAT_WEBHOOK_URL=https://redpandaventure.app.n8n.cloud/webhook/d7476910-90d6-48ea-ad63-95642ea04239

# =============================================================================
# API CONFIGURATION
# =============================================================================

# External API Configuration
NEXT_PUBLIC_API_URL=https://api.example.com
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Connection (if using a database)
DATABASE_URL=postgresql://username:password@localhost:5432/photo_library_chat
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=photo_library_chat
DATABASE_USER=username
DATABASE_PASSWORD=password

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# NextAuth.js Configuration (if using authentication)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=2592000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# File Storage (if using cloud storage)
STORAGE_PROVIDER=local
# For AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# For Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# Email Service (if sending emails)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development Mode
NODE_ENV=development
DEBUG=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_CHAT_HISTORY=true
ENABLE_FILE_UPLOAD=true
ENABLE_USER_AUTHENTICATION=false
ENABLE_ANALYTICS=false

# =============================================================================
# CHAT-SPECIFIC CONFIGURATION
# =============================================================================

# Chat Configuration
CHAT_MAX_MESSAGE_LENGTH=1000
CHAT_HISTORY_LIMIT=100
CHAT_AUTO_SCROLL=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIRECTORY=uploads

# =============================================================================
# CACHE & PERFORMANCE
# =============================================================================

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Vercel (if deploying to Vercel)
VERCEL_URL=your-vercel-url.vercel.app

# Environment-specific overrides
# These will override the above values in production
# PRODUCTION_API_URL=https://api.production.com
# PRODUCTION_DATABASE_URL=postgresql://prod_user:prod_pass@prod_host:5432/prod_db
